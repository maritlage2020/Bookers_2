 <% if @user.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @user.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<h1>User info</h1>

<%= form_for(@user) do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name %>
  <label for="profile_image">Image</label>
  <%= f.attachment_field :profile_image %>
  <label for="user_introduction">Introduction</label>
  <p><%= f.text_area :introduction %></p>
  <p><%= f.submit "Update User" %></p>
 <% end %>